CompileFlags:
    Add: -DPROFESSOR_VERSION
    Remove: -fconcepts-diagnostics-depth=3
    CompilationDatabase: build/

InlayHints:
    BlockEnd: No
    Designators: Yes
    Enabled: Yes
    ParameterNames: Yes
    DeducedTypes: Yes
    TypeNameLimit: 24

Diagnostics:
    UnusedIncludes: Strict
    MissingIncludes: Strict

Style:
    #QuotedHeaders: "core/.*"
    AngledHeaders: "(range|boost|fmt|catch2|nlohmann|argparse|gsl)/.*"

Completion:
    AllScopes: Yes
    ArgumentLists: Delimiters # fo^ completes to foo(^)

---

If:
    PathMatch: ".*\\.in"
Diagnostics:
    Suppress: "*"
